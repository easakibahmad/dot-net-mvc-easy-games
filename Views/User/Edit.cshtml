@model EasyGames.Models.User
@{
    ViewData["Title"] = "Edit User";
}
<h2>Edit User</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Username</label>
        <input asp-for="Username" class="form-control mb-2" required />
    </div>

    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" type="email" class="form-control mb-2" required />
    </div>

    <div class="form-group">
        <label>Password</label>
        <input asp-for="Password" type="password" id="passwordInput" class="form-control mb-2" value="@Model.Password" required />
        <input type="checkbox" id="showPassword" /> Show Password
    </div>

    <button type="submit" class="btn btn-success">Update</button>
    <a href="/User/Index" class="btn btn-secondary">Cancel</a>
</form>

<script>
    document.getElementById('showPassword').addEventListener('change', function () {
        var passwordInput = document.getElementById('passwordInput');
        passwordInput.type = this.checked ? 'text' : 'password';
    });
</script>

