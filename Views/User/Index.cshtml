@model List<EasyGames.Models.User>
@{
    ViewData["Title"] = "Users";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-dark">User List</h2>
        <a href="/User/Create" class="btn btn-dark">Add User</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">
            No users available. Please add some!
        </div>
    }
    else
    {
        <div class="card shadow-sm rounded-3">
            <div class="card-body">
                <table class="table table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Username</th>
                            <th>Email</th>
                            <th style="width:160px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var user in Model)
                        {
                            <tr>
                                <td>@user.Username</td>
                                <td>@user.Email</td>
                                <td class="d-flex gap-1">
                                    <a href="/User/Edit/@user.Id" class="btn btn-outline-warning btn-sm flex-fill">Edit</a>
                                    <a href="/User/Delete/@user.Id" class="btn btn-outline-danger btn-sm flex-fill">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
