@model List<EasyGames.Models.User>
@{
    ViewData["Title"] = "Users";
}
<h2>User List</h2>
<a href="/User/Create" class="btn btn-primary">Add User</a>
<table class="table mt-3">
<thead><tr><th>Username</th><th>Email</th><th>Actions</th></tr></thead>
<tbody>
@foreach(var user in Model){
<tr>
<td>@user.Username</td><td>@user.Email</td>
<td>
<a href="/User/Edit/@user.Id" class="btn btn-warning btn-sm">Edit</a>
<a href="/User/Delete/@user.Id" class="btn btn-danger btn-sm">Delete</a>
</td>
</tr>}
</tbody>
</table>
