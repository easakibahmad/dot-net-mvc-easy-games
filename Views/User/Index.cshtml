@model List<EasyGames.Models.User>
@{
    ViewData["Title"] = "Users";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-dark">User List</h2>
        <a href="/User/Create" class="btn btn-dark">Add User</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">
            No users available. Please add some!
        </div>
    }
    else
    {
        <div class="card shadow-sm rounded-3">
            <div class="card-body">
                <table class="table table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th style="width:160px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var user in Model)
                        {
                            var isCurrentUser = TempData["Username"] != null && TempData["Username"].ToString() == user.Username;
                            <tr title="@(isCurrentUser ? "This is You" : "")">
                                <td>@user.Username
                                @if (isCurrentUser)
                                {
                                    <span class="ms-1 text-primary">
                                        *
                                    </span>
                                }
                                </td>
                                <td>@user.Email</td>
                                <td>@user.Role</td>
                                <td class="d-flex gap-1">
                                    <a href="/User/Edit/@user.Id" class="btn btn-dark btn-sm flex-fill @(isCurrentUser ? "invisible" : "")"
                                        @(isCurrentUser ? "tabindex='-1' aria-disabled='true'" : "")>Edit</a>
                                    <a href="/User/Delete/@user.Id" class="btn btn-dark btn-sm flex-fill @(isCurrentUser ? "invisible" : "")"
                                        @(isCurrentUser ? "tabindex='-1' aria-disabled='true'" : "")>Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
