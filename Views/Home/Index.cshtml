@model List<EasyGames.Models.Stock>
@{
    ViewData["Title"] = "Home";
}
<div class="container mt-4">
    <div class="text-center mb-4">
        <h1 class="display-5 fw-bold text-dark">Welcome to Easy Games</h1>
        <p class="text-muted">Easily Shop Books, Games & Toys</p>
        @if (string.IsNullOrEmpty(ViewBag.Username)){
            <a href="/Home/Register" class="btn btn-outline-dark btn-lg">Create Account</a>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">
            No stock available at the moment. Please visit again soon.
        </div>
    }
    else
    {
        <div class="card shadow-sm rounded-3">
            <div class="card-body">
                <h4 class="card-title mb-3 text-secondary">Available Stock</h4>
                <table class="table table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Quantity</th>
                            <th>Price ($)</th>
                            <th style="width:150px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Category</td>
                                <td>@item.Quantity</td>
                                <td>@item.Price.ToString("0.00")</td>
                                <td>
                                    <a href="/Cart/Add/@item.Id" class="btn btn-outline-dark btn-sm w-100">
                                        Add to Cart
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
