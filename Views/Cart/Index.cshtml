@model List<EasyGames.Models.CartItem>
@{
    ViewData["Title"] = "Shopping Cart";
}
<h2>Shopping Cart</h2>
@if(!Model.Any()){
<p>Your cart is empty</p><a href="/Stock/Index" class="btn btn-primary">Shop Now</a>}
else{
<table class="table">
<thead><tr><th>Name</th><th>Price</th><th>Qty</th><th>Total</th></tr></thead>
<tbody>
@foreach(var item in Model){
<tr><td>@item.Name</td><td>@item.Price</td><td>@item.Quantity</td><td>@item.Total</td></tr>}
</tbody>
</table>
<h4>Total: @Model.Sum(x=>x.Total)</h4>
<a href="/Cart/Checkout" class="btn btn-success">Checkout</a>}
