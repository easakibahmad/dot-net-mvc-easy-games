@model List<EasyGames.Models.CartItem>
@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container mt-4">
    <h2 class="text-dark mb-4">Shopping Cart</h2>

    @if(!Model.Any())
    {
        <div class="alert alert-warning text-center">
            Your cart is empty.
            <div class="text-center mt-3">
                <a href="/" class="btn btn-dark">Shop Now</a>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm rounded-3 mb-3">
            <div class="card-body">
                <table class="table table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Name</th>
                            <th>Price ($)</th>
                            <th>Qty</th>
                            <th>Total ($)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Price.ToString("0.00")</td>
                                <td>@item.Quantity</td>
                                <td>@item.Total.ToString("0.00")</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <h4 class="text-end mt-3">Total: $@Model.Sum(x=>x.Total).ToString("0.00")</h4>
                <div class="d-flex justify-content-end mt-3">
                    <a href="/Cart/Checkout" class="btn btn-outline-dark">Checkout</a>
                </div>
            </div>
        </div>
    }
</div>
