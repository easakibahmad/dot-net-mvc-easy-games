@model List<EasyGames.Models.Stock>
@{
    ViewData["Title"] = "Stock List"; 
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-dark">Stock List</h2>
        <a href="/Stock/Create" class="btn btn-dark">Add Stock</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">
            No stock items available. Please add some!
        </div>
    }
    else
    {
        <div class="card shadow-sm rounded-3">
            <div class="card-body">
                <table class="table table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Quantity</th>
                            <th>Price ($)</th>
                            <th style="width:220px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var stock in Model)
                        {
                            <tr>
                                <td>@stock.Name</td>
                                <td>@stock.Category</td>
                                <td>@stock.Quantity</td>
                                <td>@stock.Price.ToString("0.00")</td>
                                <td class="d-flex gap-1">
                                    <a href="/Stock/Edit/@stock.Id" class="btn btn-outline-warning btn-sm flex-fill">Edit</a>
                                    <a href="/Stock/Delete/@stock.Id" class="btn btn-outline-danger btn-sm flex-fill">Delete</a>
                                    <a href="/Cart/Add/@stock.Id" class="btn btn-outline-success btn-sm flex-fill">Add to Cart</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
