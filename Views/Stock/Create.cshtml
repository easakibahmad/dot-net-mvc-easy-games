@model EasyGames.Models.Stock
@{
    ViewData["Title"] = "Create Stock";
}
<h2>Create Stock</h2>
<form asp-action="Create" method="post">
    <input asp-for="Name" class="form-control mb-2" placeholder="Name" required />
    <input asp-for="Category" class="form-control mb-2" placeholder="Category" required />
    <input asp-for="Quantity" type="number" class="form-control mb-2" placeholder="Quantity" required />
    <input asp-for="Price" type="number" step="0.01" class="form-control mb-2" placeholder="Price" required />
    <button type="submit" class="btn btn-success">Save</button>
    <a href="/Stock/Index" class="btn btn-secondary">Cancel</a>
</form>
