<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EasyGames</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EasyGames.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container align-items-center">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">EasyGames</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-start justify-content-lg-center">
                    <ul class="navbar-nav w-100 justify-content-lg-center mb-2 mb-lg-0">
                        <li class="nav-item">
                            @if (ViewBag.Role == "Owner")
                            {
                                <a class="nav-link" asp-controller="Stock" asp-action="Index">Stock</a>
                            }
                        </li>
                        <li class="nav-item">
                            @if (ViewBag.Role == "Owner")
                            {
                                <a class="nav-link" asp-controller="User" asp-action="Index">Users</a>
                            }
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Cart" asp-action="Index">Cart</a>
                        </li>
                        <li class="ms-lg-auto">
                            @if (!string.IsNullOrEmpty(ViewBag.Username))
                            {
                                <div class="d-flex align-items-center gap-3">
                                    <span class="fw-bold">Hello, @ViewBag.Username</span>
                                    <a class="nav-link btn bg-dark text-white" asp-controller="User" asp-action="Logout">Logout</a>
                                </div>
                            }
                            else
                            {
                                <a class="nav-link btn bg-dark text-white" asp-controller="User" asp-action="Login">Login</a>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3" style="background-color: white;">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - EasyGames
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
